<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Unidadfragment">
    <LinearLayout
        android:gravity="center|center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold|normal"
            android:textColor="@color/secondText"
            android:textSize="@dimen/text_size_card_salida_sub"
            android:text="@string/unidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <Spinner
            android:id="@+id/spinner_unidad_unidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="5dp"
            android:textStyle="bold|normal"
            android:textColor="@color/primaryText"
            android:text="54 registrados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_marginRight="5dp"
            android:textStyle="bold|normal"
            android:textColor="@color/primaryText"
            android:text="49 En linea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_marginRight="5dp"
            android:textStyle="bold|normal"
            android:textColor="@color/primaryText"
            android:text="5 Sin transmitir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_marginRight="5dp"
            android:textStyle="bold|normal"
            android:textColor="@color/primaryText"
            android:text="0 Sin relojes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview_unidad_unidad"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>